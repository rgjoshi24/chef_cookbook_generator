# https://docs.chef.io/policyfile.html

# A name that describes what the system you're building with Chef does.

###### Delete this file if this is Policy Cookbook ####
name '<%= @generated_cookbook_name %>'

# Where to find external cookbooks:
default_source :supermarket, '<%= node['code_generator_wrapper']['chef_supermarket_url'] %>'

# run_list: chef-client will run these recipes in the order specified.
run_list '<%= @generated_cookbook_name %>::default'

cookbook '<%= @generated_cookbook_name %>', path: '.'
